#
# Aliases file for portable sourcing
#

# zsh
if [[ $SHELL = /bin/zsh ]]; then
    alias vizrc='vim ~/.zshrc'
    alias loadzrc='source ~/.zshrc'
fi

# bash
if [[ $SHELL = /bin/bash ]]; then
    alias vibashrc='vim ~/.bashrc'
    alias loadzrc='source ~/.bashrc'
fi

# ls
alias lsa='ls -A'
alias lsl='ls -oh'
alias lsla='ls -Aoh'
alias lsr='ls -R'
alias lslr='ls -oR'
alias lsd='ls -d */'
alias lsld='ls -do */'

# eza
if [[ -x /opt/homebrew/bin/eza ]]; then
    alias ls='eza'
    alias lsa='eza -a'
    alias lso='eza -a | grep'
    alias lslo='eza -la | grep'
    alias lsl='eza -l'
    alias lsla='eza -la'
    alias lstree='eza -T'
    alias lsonly='eza -a | grep'
    alias lslonly='eza -la | grep'
    alias ls1='eza -1'
fi

# vim
if [[ -x /usr/bin/vim ]]; then
    alias vi='vim -p'
    alias vim='vim -p'
    alias view='vim -R'
    alias vimtab='vim -p'
    alias viewtab='vim -Rp'
    alias vivimrc='vim ~/.vimrc'
fi

# bat
if [[ -x /opt/homebrew/bin/bat ]]; then
    alias cat='bat'
fi

